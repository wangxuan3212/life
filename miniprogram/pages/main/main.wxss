/* pages/main/main.wxss */
page{
 background: #f4f4f4;
}
.top{
  text-align:center;
  font-size:18px;
  width:100%;
  height:50px;
  line-height:50px;
  background:#fff;
 

}

.slide-image{
  width:100%;
  height:190px;
}
swiper{
  width:100%;
  height:190px;
  position:relative;
}

.center_bar{
  width:414px;
  height:100px;
  padding:20px;
  display: flex;
  justify-content:space-around;
  flex-wrap: nowrap;
  align-content:flex-start;
  box-sizing: border-box;
  background:#fff ;
  margin:10px 0;
}
.center_item{
  height: 100%;
  flex:1;
  text-align:center;
}
.center_item image{
  width:45px;
  height:45px;
}
.center_item_font{
  font-size:12px;
}
.img-wrapper{
  width:100%;
  height:190px;
  margin:10px 0;
}
.img-wrapper image{
    height:100%;
    width:100%;
}
.bottom_item image{
    width:100%;
    height:100%;
}
.bottom{
  margin-top:2px;
  height:266px;
  background:#fff;
  display: flex;
  justify-content:space-between;
  align-items:flex-start;
}
.bottom_item{
  flex:1;
  height:100%;
  margin:5px;
  box-sizing:border-box;
}

.bottom{
  margin-bottom:10px;
}
.fixed{
  position:fixed;
  z-index: 999;
  top:0;
  left:0
}
.swiper_top{
  margin-top:50px;
}
.content{
  width:100%;
  box-sizing:border-box;
}
.item{
  width:205px;
  height:230px;
  background: #fff;
  float:left;
  margin-right:2px;
  margin-bottom:2px;
  padding:10px;
  box-sizing:border-box;
}
.product_img{
  width:100%;
  height:68%;
}
.title{
  color:#333;
  font-size:14px;
  height:20%;

}
.sale{
  font-size:12px;
  color:#666;
  height:12%;
  float:right;
  margin-top:5px;
}